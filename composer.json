{
    "name": "dbtedman/extremity",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Tedman",
            "email": "dbtedman@gmail.com"
        }
    ],
    "require": {
        "php": "7.4.*"
    },
    "require-dev": {
        "mleko/wingman": "0.3.1",
        "phpunit/phpunit": "9.5.11",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "3.6.2"
    },
    "autoload": {
        "psr-4": {
            "DBTedman\\Extremity\\": "src/php/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DBTedman\\ExtremityTest\\": "test/unit/php/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "format": "phpcbf",
        "lint": "phpcs -p",
        "test": "phpunit",
        "post-update-cmd": [
            "Mleko\\Wingman\\Composer\\EventHandler::format"
        ]
    }
}
